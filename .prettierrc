{
  "semi": false,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "none",
  "printWidth": 100,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "endOfLine": "lf",
  "overrides": [
    {
      "files": ["*.vue"],
      "options": {
        "parser": "vue",
        "printWidth": 120
      }
    },
    {
      "files": ["*.sass", "*.scss", "*.css"],
      "options": {
        "printWidth": 120,
        "parser": "scss"
      }
    }
  ]
}